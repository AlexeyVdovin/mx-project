{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Make project",
			"command": "make",
			"args": [],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"label": "Clean project",
			"command": "make",
			"args": [
				"clean"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build"
			}
		},
		{
			"type": "shell",
			"label": "Flash MCU",
			"command": "st-flash",
			"args": [
				"write",
				"build/mx.bin",
				"0x08000000"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": {
				"kind": "build"
			},
			"problemMatcher": []
		}
	]
}